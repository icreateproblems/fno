SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# Single Groq key (fallback)
GROQ_API_KEY=your_groq_api_key_here

# Multiple Groq keys (comma-separated, recommended for high volume)
GROQ_API_KEYS=gsk_key1,gsk_key2,gsk_key3

# Multiple NewsAPI keys (comma-separated, for future use)
NEWSAPI_KEYS=key1,key2,key3,key4,key5

SESSION_ENCRYPTION_KEY=your_session_encryption_key_here

# Nepali fonts (optional, for Devanagari rendering)
NEPALI_TITLE_FONT_PATH=fonts/NotoSansDevanagari-Bold.ttf
NEPALI_BODY_FONT_PATH=fonts/NotoSansDevanagari-Regular.ttf

# AI validation on ingest
AI_VALIDATE_ON_INGEST=true
AI_VALIDATE_MIN_SCORE=55

# ============================================================================
# INSTAGRAM VIA INSTAGRAM GRAPH API (Direct)
# ============================================================================
# Using Instagram App directly
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here
INSTAGRAM_APP_ID=your_instagram_app_id_here

# Image hosting for Graph API (choose one)
# Option 1: imgbb (free, easy, auto-deletion) - Get key from https://api.imgbb.com/
IMGBB_API_KEY=your_imgbb_api_key_here
# Option 2: S3/CloudFlare (production) - Not implemented yet
# AWS_S3_BUCKET=
# AWS_ACCESS_KEY=
# AWS_SECRET_KEY=

# Telegram Bot Alerts (Recommended)
# Step 1: Create bot with @BotFather on Telegram
# Step 2: Get your chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Optional: Slack/Discord (if you prefer these instead)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Content Filtering (Optional - Defaults provided)
MIN_SCORE_THRESHOLD=50
